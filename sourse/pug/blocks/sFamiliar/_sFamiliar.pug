mixin sFamiliar(data)
	// start sFamiliar
	+b.SECTION.sFamiliar.section#sFamiliar&attributes(attributes)
		.container
			+e.row.row.row-title
				.col
					h3 С этим товаров покупают
				+e.arrow-col.col-auto
					+e.link(href='#') Смотреть все
			+e.slider-wrap
				.swiper.sFamiliar-slider-js
					.swiper-wrapper
						+sProdSlide('prod-slider-3','Газонокосилка бензиновая самоходная Yanis Borasco B43F', '', '69 990 руб.')
