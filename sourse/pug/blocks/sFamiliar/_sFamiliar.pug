mixin sFamiliar(data)
	// start sFamiliar
	+b.SECTION.sFamiliar.section--wide#sFamiliar&attributes(attributes)
		.container
			+e.row.row.row-title
				.col
					h3 С этим товаров покупают
				+e.arrow-col.col-auto
					+e.link(href='#') Смотреть все
			+e.slider-wrap
				.swiper.sFamiliar-slider-js
					.swiper-wrapper
						+sProdSlide('prod-slider-3','Газонокосилка бензиновая самоходная Yanis Borasco B43F', '', '69 990 руб.')
						+sProdSlide('product-2','Мотоблок бензиновый Yanis Angry II', '196 990 руб.', '122 000 руб.')
						+sProdSlide('prod-slider-6','Триммер аккумуляторный Yanis Violet AGT12V', '', '25 990 руб.')
						+sProdSlide('product-1','Воздуходувка бензиновая Yanis AirStorm EB260B', '', '39 500 руб.')
						+sProdSlide('prod-slider-3','Газонокосилка бензиновая самоходная Yanis Borasco B43F', '', '69 990 руб.')
						+sProdSlide('product-2','Мотоблок бензиновый Yanis Angry II', '196 990 руб.', '122 000 руб.')
						+sProdSlide('prod-slider-6','Триммер аккумуляторный Yanis Violet AGT12V', '', '25 990 руб.')
						+sProdSlide('product-1','Воздуходувка бензиновая Yanis AirStorm EB260B', '', '39 500 руб.')
				.arrow-col
					+arrow2()
	// end sFamiliar

mixin nAction(imgNum, hint='hint-txt', hintActive='hint-active-txt')
	+e.hint-col.hint-col-js.col-auto(data-hint=hint data-hint-active=hintActive)
		+e.n-action.toggle-self-active-js(href="#")
			img(loading="lazy" src=`img/svg/action-${imgNum}.svg` alt="")
			img(loading="lazy" src=`img/svg/action-${imgNum}-hover.svg` alt="")
			img(loading="lazy" src=`img/svg/action-${imgNum}-active.svg` alt="")

mixin sProdSlide(img, text, oldPrice, newPrice)
	.swiper-slide
		+b.familiar-prod-item.text-center
			.wrap
				+e.img-wrap.bg-wrap
					+img(`img/${img}.png`, 'bg')
				p=text
			+e.foot-row.row
				.wrap.price-col
					.price.price_old.small=oldPrice
					.price.price_new.fw-600=newPrice
				.actions-col.actions-col--js.col-auto
					.row.gx-3.justify-content-end.align-items-center.ps-1
						+e.hint-col.hint-col-js.col-auto(data-hint="Купить" data-hint-active="В корзине")
							+e.n-cart-btn.cart-btn-js(href="#")
								img(loading="lazy" src="img/svg/n-cart.svg" alt="")
								img(loading="lazy" src="img/svg/n-cart-done.svg" alt="")
						+nAction(1, 'Добавить в избранное', 'В избранном')
						+nAction(2, 'Добавить в сравнение', 'В сравнение')