mixin sProductSlider(data)
	// start sProductSlider
	+b.SECTION.sProductSlider.section#sProductSlider&attributes(attributes)
		.container
			+b.section-title
				h2 Газонокосилки
			+e.swiper--js
				+e.row.swiper-wrapper
					.swiper-slide
						+slide('1')
					.swiper-slide
						+slide('2')
					.swiper-slide
						+slide('3')
					.swiper-slide
						+slide('4')
					.swiper-slide
						+slide('2')
					.swiper-slide
						+slide('3')
					.swiper-slide
						+slide('4')
			+e.row.row
	// end sProductSlider


mixin slide(i)
	+b.slide-item
		+img(`img/prod-slider-${i}.png`, alt="")